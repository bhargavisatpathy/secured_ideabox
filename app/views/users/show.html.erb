<% if @user.role == "admin" %>
  <h1 id="admin"> Welcome <%= @user.username %> </h1>
    <div id="category_form">
      <%= form_for(:category, url: categories_path) do |f|%>
      <p>
        <%= f.label :name%><br/>
        <%= f.text_field :name %>
      </p>
      <%= f.submit "Create Category" %>
      <% end %>
    </div>

  <h2> All categories</h2>
  <div id="catergory_list">
    <ul>
      <% if @categories != nil %>
        <% @categories.each do |category| %>
        <li>
          <%= category.name %><br/>
        </li>
        <% end %>
      <% end %>
    </ul>
  </div>

<% else %>
  <h1 id="banner"> Welcome <%= @user.username %> </h1>
    <div id="idea_form">
      <%= form_for(:idea, url: ideas_path) do |f|%>
      <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
      </p>
      <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
      </p>
      <%= f.submit "Create" %>
      <% end %>
    </div>

  <h2> All ideas</h2>
  <div id="idea_list">
    <ul>
    <% @user.ideas.each do |idea| %>
      <li>
        <%= idea.title %><br/>
        <%= idea.description %><br/>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>
